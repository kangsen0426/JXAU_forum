page {
  width: 100%;
  height: 100%;
}
page .content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
page .content .slot-wrap {
  display: flex;
  align-items: center;
  width: 100%;
  /* 如果您想让slot内容占满整个导航栏的宽度 */
  /* flex: 1; */
  /* 如果您想让slot内容与导航栏左右有空隙 */
  padding: 0 30rpx;
}
page .content .slot-wrap .index_search {
  width: 100%;
}
page .content .main {
  flex: 1;
  overflow: hidden;
  position: relative;
}
page .content .main .index_tabs {
  width: 100%;
  height: 80rpx;
  display: flex;
}
page .content .main .index_tabs .left_tabs {
  width: calc(100% - 80rpx);
  height: 100%;
}
page .content .main .index_tabs .right_menu {
  width: 80rpx;
  height: 100%;
  -webkit-transform: rotateZ(90deg);
          transform: rotateZ(90deg);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: rgba(0, 0, 0, 0.45) 0px 25rpx 20rpx -28rpx;
}
page .content .main .index_tabs .right_menu ._i {
  font-size: 42rpx;
  -webkit-transform: rotateZ(90deg);
          transform: rotateZ(90deg);
}
page .content .main .swiper {
  width: 100%;
  height: 100%;
}

